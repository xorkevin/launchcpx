#!/bin/sh

set -e

if [ -z $FLIGHTCTL_ROOT ]; then
  echo "Run flightctl"
  exit 1
fi

. "${FLIGHTCTL_ROOT}/_flightctl_lib.sh"

usage() {
  cat <<EOF 1>&2
USAGE:
    $BIN_NAME [OPTIONS] <kvns> <kvname>

OPTIONS:
    -n <namespace>
        Use the kubernetes namespace.
        Default is default.
    -o <directory>
        Output config to directory.
        Default is the current directory.
    -h
        Print this help.

ARGS:
    <kvns>
        The name of the nats streaming service namespace.
    <kvname>
        The name of the nats streaming service.
EOF
}

usage_exit() {
  usage
  exit 2
}

ns=default
outdir='.'
kvns=
kvname=

while getopts ':n:t:o:h' opt; do
  case $opt in
    n) ns="$OPTARG";;
    o) outdir="$OPTARG";;
    h) usage; exit 0;;
    *) usage_exit;;
  esac
done
shift $(($OPTIND - 1))
kvns="$1"
kvname="$2"

# validation
if [ -z $kvns ]; then
  usage_exit
fi
if [ -z $kvname ]; then
  usage_exit
fi

policydir=${outdir}/policy
mkdir -p $policydir

appname=${kvns}-${kvname}

outfile=${policydir}/${appname}.policy.hcl
exec 3>$outfile

(
cat <<EOF
path "kv/data/infra/${kvns}/${kvname}" {
  capabilities = ["read"]
}
EOF
) 1>&3

exec 3>&-
